<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_test_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test 1"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supprot_title"
                android:textColor="@color/black"
                android:textSize="@dimen/support_title"
                android:layout_marginTop="@dimen/supprot_margin_top"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/image_wx"
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:contentDescription="@null"
                android:src="@drawable/money_wx"
                android:layout_marginTop="@dimen/supprot_margin_top"
                />

            <ImageView
                android:id="@+id/image_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:contentDescription="@null"
                android:src="@drawable/money_zhifubao"
                android:layout_marginTop="@dimen/supprot_margin_top"
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>
</layout>
